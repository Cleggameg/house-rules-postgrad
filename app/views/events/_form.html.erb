<%= form_for [@house, @event || Event.new] do |f| %>
<fieldset>
  <legend>Events</legend>
  <%= f.label :name %>
  <%= f.text_field :name, :class => 'event_fields'%>
  <%= f.label :description %>
  <%= f.text_area :description, :class => 'event_fields' %>
  <%= f.label :date %>
  <%= f.datetime_local_field :date, :class => 'event_fields' %>
  <%= f.submit "Submit", :class => "button" %>
</fieldset>
<% end %>